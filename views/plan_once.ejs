    <div class="container-fluid">
        <div class="row justify-content-md-center">
            <div class="col-sm-4 w-100">
              <form id="form" method="post" action="https://mmcarwash.herokuapp.com/plan_once/">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <td colspan="2" class="text-center"><h2>Car Wash Plan Booking Form</h2></td>
                        </tr>
                    </thead>
                    <tr>
                        <td colspan="2" class="alert alert-danger" id="warningPhone" style="display: none;">Phone Number cannot contain letters!!</td>
                    </tr>
                    <tr>
                        <td style="vertical-align: middle;"><b>Phone:</b> </td>
                        <td>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span class="input-group-text" id="basic-addon1">+95</span>
                                </div>
                                <input onkeyup="checkNumber()" type="text" class="form-control" placeholder="Enter Phone Number" name="phone" id="phone" aria-label="phone_number" aria-describedby="basic-addon1" required>
                              </div>
                        </td>
                    </tr>
                    
                    <tr>
                      <td>
                        <b>City:</b>
                      </td>
                      <td>
                        <input class="form-control" type="text" placeholder="Only in Yangon for now" id="city" readonly>
                      </td>
                    </tr>
                    
                    <tr>
                        <td style="vertical-align: middle;"><b>Town:</b> </td>
                        <td>    
                            <div class="form-group">
                                <label for="town">Select Town</label>
                                <select class="form-control" name="town" id="town" required>
                                  <option>Ahlone</option>
                                  <option>Bahan</option>
                                  <option>Botahtaung</option>
                                  <option>Dagon</option>
                                  <option>Dawbon</option>
                                  <option>Hlaing</option>
                                  <option>Kamaryurt</option>
                                  <option>Kyauktadar</option>
                                  <option>Kyeemyintdine</option>
                                  <option>Lanmadaw</option>
                                  <option>Mayangon</option>
                                  <option>Mingalar</option>
                                  <option>Pabedan</option>
                                  <option>Pazundaung</option>
                                  <option>Sanchaung</option>
                                  <option>South Okalapa</option>
                                  <option>Tamwe</option>
                                  <option>Thaketa</option>
                                  <option>Thingankyun</option>
                                  <option>Yankin</option>
                                  <option>Yangon Airport</option>
                                  <option>FMI and Pun Hlaing</option>
                                  <option>MICT</option>
                                  <option>Hlaingtharyar(FMI,Nawaday,Industry)</option>
                                  <option>Gyo Gone(Insein)</option>
                                </select>
                              </div>
                        </td>
                    </tr>   
                    
                    <tr>
                        <td>
                           <b>Address Information</b> 
                        </td>
                        <td>
                          <textarea  placeholder="Street,Quarter,Hosuing,Condo,Building No.,Room No" name="address_info" id="address_info" required></textarea>
                        </td>
                    </tr>

                    <tr>
                      <td>
                        Car Plate
                      </td>
                      <td>
                        <input type="text" class="form-control" name="car_plate" id="car_plate" placeholder="Example: XX-XXXX">
                      </td>
                  </tr>
                  <tr>
                    <td>
                      Car Brand
                    </td>
                    <td>
                      <input type="text" class="form-control" name="car_brand" id="car_brand" placeholder="Example: Toyota">
                    </td>
                </tr>
                <tr>
                  <td>
                    Car Model
                  </td>
                  <td>
                    <input type="text" class="form-control" name="car_model" id="car_model" placeholder="Example: Mark 2">
                  </td>
              </tr>
                    
                    <tr>
                    <td>
                      <b>Car Size</b>
                    </td>
                    <td>
                     
                      <input type="radio" name="carsize" onchange="priceChange()" value="small">
                      <label>Small</label>
                      <br>
                    
                      <input type="radio" name="carsize" onchange="priceChange()" value="medium">
                      <label>Medium</label>
                      <br>
                    
                      <input type="radio" name="carsize"  onchange="priceChange()" value="large">
                      <label>Large</label>
                    
                    </td>
                    </tr>
                    
                     <tr>
                          <td>
                           <b>Price:</b> 
                          </td>
                          <td>
                            <input type="text" class="form-control" name="price" id="price" value="0Ks" readonly required>
                          </td>
                        </tr>
                        
                      <tr>
                        <td><b>Date</b> </td>
                        <td>
                                
                          <input class="form-control" type="date" value="2020-08-19" id="date_input" name="date_input" required>
                              
                        </td>
                    </tr>
                    
                    <tr>
                      <td>
                        <b>Time</b> 
                     </td>
                     <td>
                      <input class="form-control" type="time" value="00:00:00" id="time-_input" name="time_input" required>
                     </td>
                    </tr>
                    
                    <tr>
                    <td>
                      <input type="hidden"  id="sender" name="sender" value="<%= id %>">
                      <input type="hidden"  id="name" name="name" value="<%= name %>">
                      <input type="hidden"  id="plan" name="plan" value="<%= plan %>">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </td>
                    </tr>

                </table>  
                </form>
            </div>
        </div>
    </div>
    
</body>

<script>
function checkNumber() {
    var phone = document.getElementById('phone').value;
    var relt = isNaN(phone)
    if (relt == true){
        document.getElementById('warningPhone').style.display = "";
    }else{
        document.getElementById('warningPhone').style.display = "none";
    }
}

function priceChange() {
  var value = document.querySelector('input[name="carsize"]:checked');
  value = value.value;
  console.log(value);
 if ( '<%= plan%>' =="bronze"){
  if(value=="small"){
    document.getElementById("price").value= "4000Ks"
  }
  else if(value=="medium"){
    document.getElementById("price").value="5000Ks"
  }
  else if(value=="large"){
    document.getElementById("price").value="6000Ks"
  }
 }
 else if ( '<%= plan%>' =="silver"){
  if(value=="small"){
    document.getElementById("price").value= "5000Ks"
  }
  else if(value=="medium"){
    document.getElementById("price").value="6000Ks"
  }
  else if(value=="large"){
    document.getElementById("price").value="7000Ks"
  }
 }
 else if ( '<%= plan%>' =="gold"){
  if(value=="small"){
    document.getElementById("price").value= "6000Ks"
  }
  else if(value=="medium"){
    document.getElementById("price").value="7000Ks"
  }
  else if(value=="large"){
    document.getElementById("price").value="8000Ks"
  }
 }
 else if ( '<%= plan%>' =="platinum"){
  if(value=="small"){
    document.getElementById("price").value= "8000Ks"
  }
  else if(value=="medium"){
    document.getElementById("price").value="10000Ks"
  }
  else if(value=="large"){
    document.getElementById("price").value="15000Ks"
  }
 }
 else if ( '<%= plan%>' =="diamond"){
  if(value=="small"){
    document.getElementById("price").value= "25000Ks"
  }
  else if(value=="medium"){
    document.getElementById("price").value="35000Ks"
  }
  else if(value=="large"){
    document.getElementById("price").value="45000Ks"
  }
 }
 
 
}
</script>
<script>
      
   
  const windowShut = () => {
    MessengerExtensions.requestCloseBrowser(function success() {
      console.log("success");          
    }, function error(err) {
      console.log(err);
    });
  }
  
  document.getElementById("form").addEventListener("submit", windowShut);       
 
</script>



</html>