<script>
  function myFunction() {
    var addon0 = document.getElementById('addon0');
    var addon1 = document.getElementById('addon1');
    var addon2 = document.getElementById('addon2');
    var addon3 = document.getElementById('addon3');
    var addon4 = document.getElementById('addon4');
    if(addon0.checked==true){
      document.getElementById('add_on0').value= 'include';
    }else if(addon0.checked==false){
      document.getElementById('add_on0').value='not included';
    }
    if(addon1.checked==true){
      document.getElementById('add_on1').value='include';
    }else if(addon1.checked==false){
      document.getElementById('add_on1').value='not included';
    }
    if(addon2.checked==true){
      document.getElementById('add_on2').value='include';
    }else if(addon2.checked==false){
      document.getElementById('add_on2').value='not included';
    }
    if(addon3.checked==true){
      document.getElementById('add_on3').value='include';
    }else if(addon3.checked==false){
      document.getElementById('add_on3').value='not included';
    }
    if(addon4.checked==true){
      document.getElementById('add_on4').value='include';
    }else if(addon4.checked==false){
      document.getElementById('add_on4').value='not included';
    }
}
function checkNumber() {
    var phone = document.getElementById('phone').value;
    var relt = isNaN(phone)
    if (relt == true){
        document.getElementById('warningPhone').style.display = "";
    }else{
        document.getElementById('warningPhone').style.display = "none";
    }
}

function calculate(){
var p=document.getElementById('price').value;
var a= document.getElementById('addoncost').value;
var result =parseFloat(p)+parseFloat(a);
if (!isNaN(result)){
  document.getElementById('total').value= result;
}
}


