    <title>Booking Carwash</title>

</head>
<body background="black">
    <div class="container-fluid">
        <div class="row justify-content-md-center">
            <div class="col-sm-4 w-100">
                <table class="table table-dark table-striped" style="margin-top: 15px;">
                    <thead>
                        <tr>
                            <td colspan="2" class="text-center"><h2>Car Wash Booking Form</h2></td>
                        </tr>
                    </thead>
                    <tr>
                        <td colspan="2" class="alert alert-danger" id="warningPhone" style="display: none;">Phone Number cannot contain letters!!</td>
                    </tr>
                    <tr>
                        <td style="vertical-align: middle;"><b>Phone:</b> </td>
                        <td>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span class="input-group-text" id="basic-addon1">+95</span>
                                </div>
                                <input onkeyup="checkNumber()" type="text" class="form-control" placeholder="Enter Phone Number" id="phone" aria-label="phone_number" aria-describedby="basic-addon1" required>
                              </div>
                        </td>
                    </tr>
                    <tr>
                      <td>
                        <b>City:</b>
                      </td>
                      <td>
                        <input class="form-control" type="text" placeholder="Available only in Yangon for now" id="city" readonly>
                      </td>
                    </tr>
                    <tr>
                        <td style="vertical-align: middle;"><b>Town:</b> </td>
                        <td>    
                            <div class="form-group">
                                <label for="town">Select Town</label>
                                <select class="form-control" id="town" required>
                                  <option>Ahlone</option>
                                  <option>Bahan</option>
                                  <option>Botahtaung</option>
                                  <option>Dagon</option>
                                  <option>Dawbon</option>
                                  <option>Hlaing</option>
                                  <option>Kamaryurt</option>
                                  <option>Kyauktadar</option>
                                  <option>Kyeemyintdine</option>
                                  <option>Lanmadaw</option>
                                  <option>Mayangon</option>
                                  <option>Mingalar</option>
                                  <option>Pabedan</option>
                                  <option>Pazundaung</option>
                                  <option>Sanchaung</option>
                                  <option>South Okalapa</option>
                                  <option>Tamwe</option>
                                  <option>Thaketa</option>
                                  <option>Thingankyun</option>
                                  <option>Yankin</option>
                                  <option>Yangon Airport</option>
                                  <option>FMI and Pun Hlaing</option>
                                  <option>MICT</option>
                                  <option>Hlaingtharyar(FMI,Nawaday,Industry)</option>
                                  <option>Gyo Gone(Insein)</option>
                                </select>
                              </div>
                        </td>
                    </tr>   
                    <tr>
                        <td>
                           <b>Address Information</b> 
                        </td>
                        <td>
                          <textarea  placeholder="Street,Quarter,Hosuing,Condo,Building No.,Room No" id="address_info" required></textarea>
                        </td>
                    </tr>
                    
                    <tr>
                    <td>
                      <b>Car Type</b>
                    </td>
                    <td>
                     
                      <input type="radio" name="carsize" onchange="price()" value="small">
                      <label>Small</label>
                    
                    
                      <input type="radio" name="carsize" onchange="price()" value="medium">
                      <label>Medium</label>
                    
                    
                      <input type="radio" name="carsize"  onchange="price()" value="large">
                      <label>Large</label>
                    
                    </td>
                    </tr>
                     <tr>
                          <td>
                           <b>Price:</b> 
                          </td>
                          <td>
                            <p id="price"></p>
                          </td>
                        </tr>
                      <tr>
                        <td><b>Date</b> </td>
                        <td>
                                
                            <input class="form-control" type="date" value="2020-08-19" id="date-input" required>
                              
                        </td>
                    </tr>
                        <td>
                           <b>Time</b> 
                        </td>
                        <td>
                            <input class="form-control" type="time" value="13:45:00" id="time-input" required>
                        </td>
                       
                    <tr>

                    <td>
                        <button type="button" onclick="submit()" class="btn btn-outline-light btn-secondary btn-lg btn-block">Submit</button>
                    </td>
                    </tr>

                </table>  
            </div>
        </div>
    </div>
    
</body>
<script>
function checkNumber() {
    var phone = document.getElementById('phone').value;
    var relt = isNaN(phone)
    if (relt == true){
        document.getElementById('warningPhone').style.display = "";
    }else{
        document.getElementById('warningPhone').style.display = "none";
    }
}

function price() {
  var value = document.querySelector('input[name="carsize"]:checked') && document.querySelector('input[name="part"]:checked');
  value = value.value;
  console.log(value);
  if(value=="small"){
    document.getElementById("price").innerHTML= "3000Ks"
  }
  else if(value=="medium"){
    document.getElementById("price").innerHTML="4000Ks"
  }
  else if(value=="large"){
    document.getElementById("price").innerHTML="5000Ks"
  }
  
}
</script>


