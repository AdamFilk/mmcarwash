    <div class="container-fluid">
      <h1 class="text-center">Car Wash Booking Form</h1>
        <div class="row justify-content-md-center">
            <div class="col-sm-4 w-100" style="margin-top: 25px; margin-bottom: 25px;">
              <form id="form"  method="post" action="https://mmcarwash.herokuapp.com/carwash/">
                <div class="form-group row">
                  <label for="phone" class="col-sm-2 col-form-label">Phone:</label>
                  <div class="col-sm-10">
                    <input type="number" name="phone" id="phone" placeholder="Please Enter Phone Number">
                  </div>
                </div>
                <div class="form-group row">
                  <label for="city" class="col-sm-2 col-form-label">City</label>
                  <div class="col-sm-10">
                    <input type="number" name="city" id="city" readonly value="Only available in Yangon for Now">
                  </div>
                </div>
                <div class="form-group row">
                  <label for="town" class="col-sm-2 col-form-label">Town</label>
                  <div class="col-sm-10">
                    <select class="form-control" name="town" id="town" required>
                      <option>Ahlone</option>
                      <option>Bahan</option>
                      <option>Botahtaung</option>
                      <option>Dagon</option>
                      <option>Dawbon</option>
                      <option>Hlaing</option>
                      <option>Kamaryurt</option>
                      <option>Kyauktadar</option>
                      <option>Kyeemyintdine</option>
                      <option>Lanmadaw</option>
                      <option>Mayangon</option>
                      <option>Mingalar</option>
                      <option>Pabedan</option>
                      <option>Pazundaung</option>
                      <option>Sanchaung</option>
                      <option>South Okalapa</option>
                      <option>Tamwe</option>
                      <option>Thaketa</option>
                      <option>Thingankyun</option>
                      <option>Yankin</option>
                      <option>Yangon Airport</option>
                      <option>FMI and Pun Hlaing</option>
                      <option>MICT</option>
                      <option>Hlaingtharyar(FMI,Nawaday,Industry)</option>
                      <option>Gyo Gone(Insein)</option>
                    </select>
                  </div>
                  </div>
                  <div class="form-group row">
                    <label for="address" class="col-sm-2 col-form-label">Address</label>
                    <div class="col-sm-10">
                      <textarea  placeholder="Street,Quarter,Hosuing,Condo,Building No.,Room No" name="address" id="address" required></textarea>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="car_info" class="col-sm-2 col-form-label">Enter your Car:</label>
                    <div class="col-sm-10">
                      <input type="text" name="car_info" id="car_info" placeholder="Example: Honda Fit">
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="carsize" class="col-sm-2 col-form-label">Car Size:</label>
                    <div class="col-sm-10">
                      <input type="radio" name="carsize" onchange="price()" value="small">
                      <label>Small</label>
                    
                    
                      <input type="radio" name="carsize" onchange="price()" value="medium">
                      <label>Medium</label>
                    
                    
                      <input type="radio" name="carsize"  onchange="price()" value="large">
                      <label>Large</label>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="price" class="col-sm-2 col-form-label">Price:</label>
                    <div class="col-sm-10">
                      <p name="price" id="price"></p>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="date" class="col-sm-2 col-form-label">Date</label>
                    <div class="col-sm-10">
                      <input class="form-control" type="date" value="2020-08-19" name="date-input" id="date-input" required>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label for="time" class="col-sm-2 col-form-label">Time:</label>
                    <div class="col-sm-10">
                      <input class="form-control" type="time" value="13:45:00" name="time-input" id="time-input" required>
                    </div>
                  </div>
                  <input type="hidden"  id="name" name="name" value="<%= name %>">
                  <input type="hidden"  id="washtype" name="washtype" value="<%= washtype %>">
                  <input type="hidden"  id="intorext" name="intorext" value="<%= intorext %>">
                  <input type="hidden"  id="sender" name="sender" value="<%= id %>">
                  <input class="btn btn-primary" type="submit" value="Submit">
              </form>
            </div>
        </div>
    </div>
    
</body>
