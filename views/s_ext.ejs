<script>
function checkNumber() {
    var phone = document.getElementById('phone').value;
    var relt = isNaN(phone)
    if (relt == true){
        document.getElementById('warningPhone').style.display = "";
    }else{
        document.getElementById('warningPhone').style.display = "none";
    }
}

function price() {
  var value = document.querySelector('input[name="carsize"]:checked');
  value = value.value;
  console.log(value);
  if(value=="small"){
    document.getElementById("price").innerHTML= "4500Ks"
  }else if(value=="medium"){
    document.getElementById("price").innerHTML="7000Ks"
  }else if(value=="large"){
    document.getElementById("price").innerHTML="8500Ks"
  }
  
}
</script>


