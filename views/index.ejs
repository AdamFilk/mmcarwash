<body>
    <div class="container-fluid">
        <div class="row justify-content-md-center">
            <div class="col-sm-4 w-100">
                <table class="table table-dark table-striped" style="margin-top: 15px;">
                    <thead>
                        <tr>
                            <td colspan="2" class="text-center"><h2>Booking Confrim</h2></td>
                        </tr>
                    </thead>
                    <tr>
                        <td colspan="2" class="alert alert-danger" id="warningPhone" style="display: none;">Phone Number cannot contain letters</td>
                    </tr>
                    <tr>
                        <td style="vertical-align: middle;">Phone: </td>
                        <td>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                  <span class="input-group-text" id="basic-addon1">+95</span>
                                </div>
                                <input onkeyup="checkNumber()" type="text" class="form-control" placeholder="Enter Phone Number" id="phone" aria-label="phone_number" aria-describedby="basic-addon1">
                              </div>
                        </td>
                    </tr>
                    <tr>
                        <td style="vertical-align: middle;">Address: </td>
                        <td>
                            <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Please enter your address" aria-label="address" aria-describedby="button-addon2">
                          </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <button type="button" onclick="submit()" class="btn btn-outline-light btn-secondary btn-lg btn-block">Submit</button>
                        </td>
                    </tr>

                </table>
            </div>
        </div>
    </div>
    
</body>
<script>
function checkNumber() {
    var phone = document.getElementById('phone').value;
    var relt = isNaN(phone)
    if (relt == true){
        document.getElementById('warningPhone').style.display = "";
    }else{
        document.getElementById('warningPhone').style.display = "none";
    }
}
</script>
